@model IEnumerable<Room>


<h1>
    Rooms
</h1>

<form method="get">
    <label for="floors">Select a floor:</label>
    <select id="floors" name="floor">
        <option value="">--Select Floor--</option>
        @foreach(var floor in ViewBag.UniqueFloors)
        {
            <option value="@floor">@floor</option>
        }
    </select>
    <button type="submit">Submit</button>
</form>



    <table class="table">
        <thead>
            <tr>
                <th>Room Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Room" asp-action="Detail" asp-route-id="@room.RoomId"> @room.RoomName</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>


