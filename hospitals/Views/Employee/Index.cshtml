@model IEnumerable<Employee>


<h1>
    Employees
</h1>



<form method="get" action="" >
  <label for="minAge">Minimum age:</label>
  <input type="number" id="minAge" name="older_than" required max= "@ViewBag.MaxAge" required min = "@ViewBag.MinAge"
     oninvalid="this.setCustomValidity('No employee is younger that '+@ViewBag.MinAge+' and older than '+@ViewBag.MaxAge)">

  <label for="maxAge">Maximum age:</label>
  <input type="number" id="maxAge" name="younger_than" required max= "@ViewBag.MaxAge" required min="@ViewBag.MinAge"
     oninvalid="this.setCustomValidity('No employee is younger that '+@ViewBag.MinAge+' and older than '+@ViewBag.MaxAge)">
  <button type="submit">Submit</button>
</form>

<form method="get" action="">
  <label for="minSalary">Minimum salary:</label>
  <input type="number" id="minSalary" name="salary_min" required max="@ViewBag.MaxSalary" min="@ViewBag.MinSalary" step="0.01" 
         style="-webkit-appearance: none; -moz-appearance: textfield; appearance: textfield;" />

  <label for="maxSalary">Maximum salary:</label>
  <input type="number" id="maxSalary" name="salary_max" required max="@ViewBag.MaxSalary" min="@ViewBag.MinSalary" step="0.01" 
         style="-webkit-appearance: none; -moz-appearance: textfield; appearance: textfield;" />
  <button type="submit">Submit</button>
</form>



</style>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Job Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>

                    <td>@if (emp is Doctor)
                        {
                        <a asp-controller="Doctor" asp-action="Detail" asp-route-id="@emp.Id"> @emp.FirstName</a> 
                        }
                        @if (emp is Nurse)
                        {
                        <a asp-controller="Nurse" asp-action="Detail" asp-route-id="@emp.Id"> @emp.FirstName</a> 
                        }
                    </td>
                    <td>@emp.LastName</td>
                    <td>@emp.Age</td>
                    <td>@emp.Salary €</td>
                    <td>@if (emp is Doctor)
                        {
                            <p>@nameof(Doctor)</p>
                        }
                        @if (emp is Nurse)
                        {
                            <p>@nameof(Nurse)</p>
                        }
                    <td>
                </tr>
            }
        </tbody>
    </table>


